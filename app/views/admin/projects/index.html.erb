<div class="row">
  <div class="col-sm">
    <table class="table table-striped">
      <thead>
        <tr class="bg-primary">
          <th width="80%" class="text-white">Name</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><%= link_to 'Edit', edit_admin_project_path(project), class: "btn btn-primary" %></td>
            <td><%= link_to 'Destroy', admin_project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-sm">
    <%= link_to 'New Project', new_admin_project_path, class: "btn btn-primary" %>
  </div>
</div>
