<%= simple_form_for(technology, url: path) do |f| %>
  <%= render 'shared/errors', obj: technology %>

  <%= f.input :name %>
  <%= f.input :icon %>

  <div class="actions">
    <%= link_to 'Back', admin_technologies_path, class: "btn btn-secondary" %>
    <%= f.submit 'Save', class: 'btn btn-primary float-right' %>
  </div>
<% end %>
