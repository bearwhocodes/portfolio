<!DOCTYPE html>
<html>
  <head>
    <title>bearwho.codes admin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
        <%= link_to admin_root_path, class: "navbar-brand" do %>
          bearwho.codes
        <% end %>
        <div class="collapse navbar-collapse" id="navigation">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item"><%= link_to "Articles", admin_articles_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Projects", admin_projects_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Technologies", admin_technologies_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Pens", admin_pens_path, class: "nav-link" %></li>
          </ul>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </nav>
    </div>
    <div class="container-fluid bg-light header">
      <h1><%= admin_heading %></h1>
    </div>
    <% if notice || alert %>
      <div class="container-fluid alert-container">
        <div class="row">
          <div class="col-sm">
            <% if notice %>
              <div class="alert alert-primary" role="alert">
                <%= notice %>
              </div>
            <% elsif alert %>
              <div class="alert alert-warning" role="alert">
                <%= alert %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="container-fluid">
      <div class="content">
        <%= yield %>
      </div>
    </div>
    <nav class="navbar fixed-bottom navbar-dark bg-primary justify-content-end">
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "navbar-brand" %>
    </nav>
  </body>
</html>
